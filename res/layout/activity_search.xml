<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:id="@+id/text_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/text_view_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Topic: Software Engineering"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/text_view_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: test1@gmail.com"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/Yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Yes"
            android:layout_alignTop="@+id/Yes">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/text_view_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/text_view_genre2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: test1@gmail.com"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/text_view_age2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Topic: Software Engineering"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


                </LinearLayout>

                <TextView
                    android:id="@+id/text_view_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anthony"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/text_view_genre3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: test2@gmail.com"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/text_view_age3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Topic: Computer Science"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>

